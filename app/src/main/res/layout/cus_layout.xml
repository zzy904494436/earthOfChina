<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <Button
        android:id="@+id/toCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="中"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/toUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="上"
        android:layout_alignLeft="@id/toCenter"
        android:layout_above="@id/toCenter"
        />
    <Button
        android:id="@+id/toDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="下"
        android:layout_alignLeft="@id/toCenter"
        android:layout_below="@id/toCenter"
        />
    <Button
        android:id="@+id/toLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="左"
        android:layout_alignTop="@id/toCenter"
        android:layout_toLeftOf="@id/toCenter"
        />
    <Button
        android:id="@+id/toRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="右"
        android:layout_alignTop="@id/toCenter"
        android:layout_toRightOf="@id/toCenter"
        />

</RelativeLayout>
